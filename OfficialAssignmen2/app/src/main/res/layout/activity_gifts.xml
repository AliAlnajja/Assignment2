<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gift_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gifts_external_recycle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifts_flower_recycle" />

    <Button
        android:id="@+id/gifts_flower_recycle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Flowers"
        app:layout_constraintEnd_toStartOf="@+id/gifts_gift_recycle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gifts_gift_recycle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gifts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gifts_flower_recycle"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gifts_external_recycle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Indigo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gifts_favorite_recycle"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/gifts_favorite_recycle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Favorites"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gifts_external_recycle" />
</androidx.constraintlayout.widget.ConstraintLayout>